FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set host to 0.0.0.0 so Vite can be accessed from outside the container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
